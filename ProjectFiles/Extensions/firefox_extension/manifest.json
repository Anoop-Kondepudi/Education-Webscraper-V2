{
  "manifest_version": 2,
  "name": "Freeport Extension",
  "version": "2.0",
  "description": "Freeport Extension for Firefox",
  "browser_specific_settings": {
    "gecko": {
      "id": "freeport@extension.com",
      "strict_min_version": "57.0"
    }
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "cookies",
    "browsingData",
    "contextMenus",
    "webRequest",
    "*://*.chegg.com/*", 
    "*://*.freeportforall.in/*", 
    "https://www.bartleby.com/*"
  ],
  "commands": {
    "paraphrase-text": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Paraphrase selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.chegg.com/*", "https://www.numerade.com/*", "https://www.bartleby.com/*"],
      "js": ["browser-polyfill.js", "content-script-wrapper.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "9436586395862965.js", 
    "dashboard.html", 
    "83894758484687456.js"
  ],
  "browser_action": {
    "default_popup": "popup2.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background-wrapper.js", "74868374698943576.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'none'",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}



